<%= render(partial: 'partials/menu', locals: { title: 'Sign up', path: nil }) %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2>Account information</h2>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :posts_counter, value: 0 %>
  <%= f.label :name, 'Name <em>(required)</em>'.html_safe %>
  <%= f.text_field :name %>
  <%= f.label :photo %>
  <%= f.url_field :photo %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.label :email, 'Email <em>(required)</em>'.html_safe %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  <%= f.label :password, "Password <em>(#{@minimum_password_length if @minimum_password_length} characters minimum)</em>".html_safe %>
  <%= f.password_field :password, autocomplete: "new-password" %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  <%= f.submit "Sign up" %>
<% end %>
<%= render "devise/shared/links" %>