<%= form_with model: Post, url: user_posts_path do |form| %>
  <h2>Post information</h2>
  <% unless flash[:messages].nil? %>
    <% flash[:messages].each do |message| %>
      <em><%= message %></em>
    <% end %>
  <% end %>
  <%= form.label :title, 'Post title' %>
  <%= form.text_field :title %>
  <%= form.label :text, 'Post text' %>
  <%= form.text_area :text %>
  <%= form.submit 'Store' %>
<% end %>